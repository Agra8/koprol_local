<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
		<record model="ir.ui.view" id="eps_quotation_tree_view">
			<field name="name">eps.quotation.tree</field>
			<field name="model">eps.quotation</field>
			<field name="arch" type="xml">
				<tree string="Quotation">
                    <field name='name'/>
                    <field name='supplier_id'/>
                    <field name='ref'/>
                    <field name='revision'/>
                    <field name='validity_date'/>
                    <field name='amount_total'/>
                    <field name='state'/>
				</tree>
			</field>
		</record>
			
		<record model="ir.ui.view" id="eps_quotation_form_view">
			<field name="name">eps.quotation.form</field>
			<field name="model">eps.quotation</field>
			<field name="arch" type="xml">
				<form string="Quotation">
                    <header>
                    	<button name="action_set_final" class="oe_highlight" states="valid" string="Final" type="object"/>
                    	<button name="action_set_invalid" states="valid" string="Invalid" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
					<sheet>
                        <h2>
                            <field name='name' readonly="1"/>
                        </h2>
						<group col="4" colspan="4">
                            <field name='date' readonly="1"/>
                            <field name='ref' attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name='supplier_id' options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name='validity_date' attrs="{'readonly': [('state','!=','draft')]}"/>
                            <label for="file_document_show" string="File Document"/>
                            <div>
                                <field name="filename_document" invisible="1"/>
                                <field name="file_document_show" filename="filename_document" />
                                <field name="file_document" filename="filename_document" />
                            </div>
						</group>
						<notebook>
                            <page string="Quotation Lines">
								<field name="quotation_line_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable='top' edit='false'>
                                        <field name="product_id" options="{'no_create': True,'no_open': True}"/>
                                        <field name="name"/>
                                        <field name="categ_id" options="{'no_create': True,'no_open': True}"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field
	                                        name="tax_id"
	                                        widget="many2many_tags"
	                                        options="{'no_create': True}"
	                                        domain="[('type_tax_use','=','purchase')]"
	                                        optional="show"
	                                    />
	                                    <field name="discount" string="Disc.%" optional="show" widget="product_discount"/>
	                                    <field name="price_subtotal" widget="monetary"/>
	                                    <field name="price_total" widget="monetary" groups="account.group_show_line_subtotals_tax_included"/>
	                                    <field name="price_tax" invisible="1"/>
                                    </tree>
                                </field>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
	                                <group colspan="4">
	                                </group>
	                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
	                                    <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
	                                    <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
	                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
	                                        <label for="amount_total" />
	                                    </div>
	                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
	                                </group>
	                                <div class="oe_clear"/>
	                            </group>
                                <!-- <group class="oe_subtotal_footer oe_right" colspan="2" name="work_total">
	                                <div class="oe_subtotal_footer_seperator oe_inline">
	                             	<label for="total"/>
	                             	
	                             	</div>
	                             	<field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
	                             </group> -->
							</page>
							<page string="Audit Trail">
								<group>
									<!-- <group>
										<field name="requested_by" readonly="1"></field>
										<field name="requested_on" readonly="1"></field>
										<field name="closed_by" readonly="1"></field>
										<field name="closed_on" readonly="1"></field>
									</group> -->
									<group>
                                        <field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids"/>
						<field name="message_ids"/>
					</div>
				</form>
			</field>
		</record> 

		<record id="eps_quotation_search_view" model="ir.ui.view">
            <field name="name">eps.quotation.search</field>
            <field name="model">eps.quotation</field>
            <field name="arch" type="xml">
                <search string="Search quotation">
                    <field name="name"/>
                    <field name="supplier_id"/>
                    <field name="state"/>
					<filter string="Quotation" name="state_quotation" domain="[('state','=','quotation')]" />
					<filter string="Negotiation" name="state_negotiation" domain="[('state','=','negotiation')]" />
					<filter string="Final Tender" name="state_final_tender" domain="[('state','=','final_tender')]" />
                    <group expand="0" string="Group By">
                        <filter string="Supplier" name="supplier_group" icon="terp-personal" domain="[]" context="{'group_by':'supplier_id'}"/>
                        <filter string="Status" name="state_group" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group> 
                </search>
            </field>
        </record>

		<record model="ir.actions.act_window" id="eps_quotation_action">
			<field name="name">Quotation</field>
			<field name="res_model">eps.quotation</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="eps_quotation_menuitem" name="Quotation" sequence="3" parent="eps_menu.eps_proposal_top_menu" action="eps_quotation_action"/>  
	</data>
</odoo> 
