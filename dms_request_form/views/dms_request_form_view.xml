<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="dms_request_form_view_tree" model="ir.ui.view">
            <field name="name">dms.request.form.tree</field>
            <field name="model">dms.request.form</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Request Form">
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="name_pegawai"/>
                    <field name="state"/>
                    <field name="total_approval" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="dms_request_form_view_form" model="ir.ui.view">
            <field name="name">dms.request.form.form</field>
            <field name="model">dms.request.form</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Request Form">
                    <header>
                        <button name="action_rfa" string="Waiting for Approval" states="draft" class="oe_highlight" type="object"/>
                        <button name="action_approve" string="Approve" states="rfa" class="oe_highlight" type="object"/>
                        <button name="action_open" string="Open" states="approved" class="oe_highlight" type="object"/>
                        <button name="action_done" string="Closed" states="approved,open" class="oe_highlight" type="object"/>
                        <button name="action_reject" string="Reject" states="rfa" class="oe_higlight" type="object"/>
                        <button name="action_cancel" string="Cancel" states="draft,rfa,approved" class="oe_highlight" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,rfa,approved,rejected,cancel,open,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" force_save="1" /> <br/>
                            </h1>
                        </div>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" required="1" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                            <field name="branch_id" required="1" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                            <field name="department_id" required="1" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                            
                        </group>
                        <group>
                            <field name="name_pegawai" required="1" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                            <field name="no_telp" required="1" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                            <field name="job_title" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                        </group>
                        <div>
                            <br />
                            <button name="action_request" attrs="{'invisible':[('state','in',['open','closed','cancel'])]}" string="Form Request" style="margin-bottom:3px" class="oe_stat_button alert alert-info" icon="fa-file-text-o" type="object" context="{'default_active_id': active_id}"/>
                        </div>
                        <notebook>
                            <page string="Request">
                                <field name="request_line_ids">
                                <tree create="0" delete="0"> 
                                    <field name="form_id" string="Request" readonly="1"/>
                                    <field name="keterangan" readonly="1"/>
                                    <field name="date" readonly="1"/>
                                </tree>
                                </field>
                            </page>
                            <page string="Approval">
                                 <field name="approval_ids">
                                    <tree>
                                        <field name="group_id" string="Groups" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                                        <field name="employee_id" string="Nama Approval" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                                        <field name="date"/>
                                        <field name="tanggal_approved" string="Tanggal Approved" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                                        <field name="tanggal_reject" string="Tanggal Reject" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                                        <field name="alasan_reject" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                                        <field name="state" string="Status" attrs="{'readonly':[('state','in',['open','closed','cancel'])]}"/>
                                    </tree>
                                 </field> 
                            </page>
                            <page string="Audit Trail" >
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view -->
        <record id="dms_request_form_search" model="ir.ui.view">
            <field name="name">dms.request.form.search</field>
            <field name="model">dms.request.form</field>
            <field name="arch" type="xml">
                <search string="Request Form">
                    <field name="company_id"  groups="base.group_multi_company" select="True"/>
                    <field name="branch_id" select="True"/>
                    <field name="name_pegawai" string="Nama Pegawai"/>
                    <filter name="state_open" string="Open" domain="[('state', '=', 'open')]"/>
                    <filter name="state_draft" string="Request Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="state_rfa" string="Belum di Approve" domain="[('state', '=', 'rfa')]"/>
                    <group string="Group By">
                        <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                        <filter name="group_branch" string="Dealer" context="{'group_by': 'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action window -->
        <record id="dms_request_form_action" model="ir.actions.server">
            <field name="name">Request Form</field>
            <field name="model_id" ref="model_dms_request_form"/>
            <field name="state">code</field>
            <field name="code">
                action=env['dms.request.form'].dms_request_form_view()
            </field>
        </record>


        <menuitem id="dms_request_form_menu" name="Request Form" parent="dms_request_form_sub_menu" action="dms_request_form_action" sequence="20"/>


        <!-- Line Request -->
        <record id="dms_request_form_line_tree" model="ir.ui.view">
            <field name="name">dms.request.form.tree</field>
            <field name="model">dms.request.form.line</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="DMS Request Form Line">
                    <field name="form_id">
                        <field name="name" string="Request"/>
                    </field>
                    <field name="keterangan"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="dms_request_form_line_form_wizard" model="ir.ui.view">
            <field name="name">dms.request.form.form.wizard</field>
            <field name="model">dms.request.form.line.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="DMS Request Form Line">
                    <group>
                        <group>
                            <field name="form_id"/>
                            <field name="keterangan"/>
                            <field name="date" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_add_only" string="Save" type="object" class="oe_highlight oe_edit_only"/>
                        <button name="action_add_and_more" string="Add another request" type="object" class="oe_edit_only"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <!-- Line Approval -->
        <!-- Tree View -->
        <record id="dms_request_form_approval_tree" model="ir.ui.view">
            <field name="name">dms.request.form.tree</field>
            <field name="model">dms.request.form.approval</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="DMS Request Form Line">
                    <field name="employee_id"/>
                    <field name="alasan_reject"/>
                    <field name="job_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- Form Approval -->
        <record id="dms_request_form_approval_form" model="ir.ui.view">
            <field name="name">dms.request.form.form</field>
            <field name="model">dms.request.form.approval</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="DMS Request Form Approval">
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="job_level" required="1"/>
                            <field name="job_id" readonly="1" force_save="1"/>
                            <field name="group_id" readonly="1" force_save="1"/>
                            <field name="alasan_reject"/>
                            <field name="user_id" invisible="1"/>

                        </group>
                        <group>
                            <field name="state"/>
                            <field name="date"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <!-- form reject -->
        <record id="dms_request_form_approval_reject_form" model="ir.ui.view">
            <field name="name">dms.request.form.reject.form</field>
            <field name="model">dms.request.form.approval</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reject">
                    <sheet>
                        <h3>Silahkan isi alasan anda</h3>
                        <group col="4" colspan="4">
                            <field name="alasan_reject" widget="text_emojis" nolabel="1" required="1"/>
                        </group>
                        <footer>
                            <button name="action_reject_form" string="Reject" type="object" class="oe_highlight"/>
                            <button name="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        
    </data>
</odoo>