<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="master_jrf_arf_tree" model="ir.ui.view">
            <field name="name">master.jrf.arf</field>
            <field name="model">master.jrf.arf</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Master JRF / ARF">
                    <field name="name"/>
                    <field name="type_form"/>
                    <!-- <field name="keterangan"/> -->
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="master_jrf_arf_form" model="ir.ui.view">
            <field name="name">master.jrf.arf.form</field>
            <field name="model">master.jrf.arf</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master JRF / ARF">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="approval_default"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- search view -->
        <record id="master_jrf_arf_search" model="ir.ui.view">
            <field name="name">master.jrf.arf.search</field>
            <field name="model">master.jrf.arf</field>
            <field name="arch" type="xml">
                <search string="Master JRF / ARF">
                    <field name="name"/>
                    <field name="type_form"/>
                </search>
            </field>
        </record>

        <!-- action window -->
        <record id="master_jrf_arf_action" model="ir.actions.act_window">
            <field name="name">Master JRF / ARF</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">master.jrf.arf</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new JRF / ARF
                </p><p>
                    Click the Create button to add a new JRF / ARF
                </p>
            </field>
        </record>

        <!-- Master Type Request -->
        <record id="master_type_reqeust_tree" model="ir.ui.view">
            <field name="name">Master Type Request</field>
            <field name="model">master.type.request</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Master Type Request">
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="master_type_request_form" model="ir.ui.view">
            <field name="name">Master Type Request Form</field>
            <field name="model">master.type.request</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="approval_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="master_type_request_search" model="ir.ui.view">
            <field name="name">Master Type Request Search</field>
            <field name="model">master.type.request</field>
            <field name="arch" type="xml">
                <search string="Master Type Request">
                    <field name="name"/>
                    <field name="company_id"/>
                </search>
            </field>
        </record>

        <!-- action window -->
        <record id="master_type_request_action" model="ir.actions.act_window">
            <field name="name">Master Type Request </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">master.type.request</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Type Request
                </p><p>
                    Click the Create button to add a new Type Request
                </p>
            </field>
         </record>

         <menuitem id="master_jrf_arf_menu" name="Master JRF / ARF" parent="dms_master_jrf_arf_sub_menu" action="master_jrf_arf_action" sequence="20"/>
         
         <menuitem id="master_type_request_menu" name="Master Type Request" parent="dms_master_jrf_arf_sub_menu" action="master_type_request_action" sequence="20"/>
    </data>
</odoo>