<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ROLE department -->
        <record id="group_dms_department_read" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role"/>
            <field name="name">HR Department Read</field>
            <field name="menu_access" eval="[(4, ref('dms_departemen_menuitem'))]"/>
        </record>

        <record id="access_dms_department_read" model="ir.model.access">
            <field name="model_id" ref="model_hr_department"/>
            <field name="name">dms_department read</field>
            <field name="group_id" ref="group_dms_department_read"/>
            <field name="perm_read">1</field>
        </record>

        <record id="group_dms_department_update" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role"/>
            <field name="name">HR Department Update</field>
            <field name="menu_access" eval="[(4, ref('dms_departemen_menuitem'))]"/>
            <field name="implied_ids" eval="[(4, ref('group_dms_department_read'))]"/>
        </record>

        <record id="access_dms_department_update" model="ir.model.access">
            <field name="model_id" ref="model_hr_department"/>
            <field name="name">dms_department update</field>
            <field name="group_id" ref="group_dms_department_update"/>
            <field name="perm_create">1</field>
            <field name="perm_write">1</field>
        </record>

        <record id="group_dms_department_delete" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role"/>
            <field name="name">HR Department Delete</field>
            <field name="menu_access" eval="[(4, ref('dms_departemen_menuitem'))]"/>
            <field name="implied_ids" eval="[(4, ref('group_dms_department_read'))]"/>
        </record>

        <record id="access_dms_activity_plan_delete" model="ir.model.access">
            <field name="model_id" ref="model_hr_department"/>
            <field name="name">dms_department delete</field>
            <field name="group_id" ref="group_dms_department_delete"/>
            <field name="perm_unlink">1</field>
        </record>

        </data>
    <data>
        <record id="dms_menu.group_sys_admin" model="res.groups">
            <field name="implied_ids" eval="[
               	(4, ref('group_dms_department_read')),
                (4, ref('group_dms_department_update')),
                (4, ref('group_dms_department_delete')),
				]"/>
        </record>
    </data>
