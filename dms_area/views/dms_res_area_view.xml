<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="dms_res_area_view_tree" model="ir.ui.view">
            <field name="name">res.area.tree</field>
            <field name="model">res.area</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Res area">
                    <field name="name" />
                    <field name="code" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="dms_res_area_view_form" model="ir.ui.view">
            <field name="name">res.area.form</field>
            <field name="model">res.area</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Res area">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Res area Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" />
                                <field name="description" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="dms_res_area_view_search" model="ir.ui.view">
            <field name="name">res.area.search</field>
            <field name="model">res.area</field>
            <field name="arch" type="xml">
                <search string="Res area">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Code" name="filter_by_code" domain="[('code','=','')]" />
                    <filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
                    <field name="name" select="True"/>
                    <field name="code" select="True"/>
                    <field name="description" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        
        <!-- action window -->
        <record id="dms_res_area_action" model="ir.actions.act_window">
            <field name="name">Res area</field>
            <field name="res_model">res.area</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Res area
                </p><p>
                Click the Create button to add a new Res area
                </p>
            </field>
        </record>
                
        <menuitem id="dms_res_area_setting_menu" name="Area" parent="base.menu_users" action="dms_res_area_action" sequence="20" groups="dms_area.dms_res_area_group_read"/>
        <menuitem id="dms_res_area_master_menu" name="Area" parent="dms_menu.dms_branch_master_menuitem" action="dms_res_area_action" sequence="20" groups="dms_area.dms_res_area_master_group_read"/>
    </data>
</odoo>