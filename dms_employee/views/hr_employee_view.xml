        <!-- search -->
        <record id="dms_employee_view_search" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <search string="Employee">
                    <field name="name" select="True"/>
                    <field name="nip" select="True"/>
                    <field name="branch_id" select="True"/>
                    <field name="job_id" select="True"/>
                    <field name="department_id" select="True"/>
                    <filter name="active_state" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="unactive_state" string="Unactive" domain="[('active', '=', False)]"/>
                    <group string="Group By..">
                        <filter string="Job" domain="[]" name="group_by_job_id" context="{'group_by':'job_id'}"/>
                        <filter string="Branch" domain="[]" name="group_by_branch_id" context="{'group_by':'branch_id'}"/>
                        <filter string="Department" domain="[]" name="group_by_department_id" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--honda people action window -->
        <record id="dms_employee_action" model="ir.actions.act_window">
            <field name="name">Honda People</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="dms_employee.dms_employee_view_search"/>
            <field name="context">{'search_default_fieldname':1, }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Employee
                </p><p>
                Click the Create button to add a new Employee
                </p>
            </field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree'}), 
                (0, 0, {'view_mode': 'form', 'view_id': ref('dms_employee_view_form')}),                               
                (0, 0, {'view_mode': 'kanban'})]"/>
        </record>
        
        <menuitem id="dms_employee_menu" name="Honda People" parent="dms_menu.dms_employee_sub_menu" action="dms_employee_action" sequence="20" groups="dms_employee.dms_employee_group_read"/>
    </data>
</odoo>