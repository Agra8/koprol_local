<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- DMS Employee Group Read -->

        <record id="dms_employee_group_read" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS Employee Read</field>
        </record>

        <record id="dms_employee_access_read" model="ir.model.access">
            <field name="model_id" ref="model_hr_employee" />
            <field name="name">dms_hr_employee read</field>
            <field name="group_id" ref="dms_employee_group_read" />
            <field name="perm_read">1</field>
        </record>

        <!-- DMS Employee Group Update -->

        <record id="dms_employee_group_update" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS Employee Update</field>
            <field name="implied_ids" eval="[(4, ref('dms_employee_group_read'))]" />
        </record>

        <record id="dms_employee_access_update" model="ir.model.access">
            <field name="model_id" ref="model_hr_employee" />
            <field name="name">dms_hr_employee update</field>
            <field name="group_id" ref="dms_employee_group_update" />
            <field name="perm_create">1</field>
            <field name="perm_write">1</field>
        </record>

        <!-- DMS Employee Group Delete -->

        <record id="dms_employee_group_delete" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS Employee Delete</field>
            <field name="implied_ids" eval="[(4, ref('dms_employee_group_read'))]" />
        </record>

        <record id="dms_employee_access_delete" model="ir.model.access">
            <field name="model_id" ref="model_hr_employee" />
            <field name="name">dms_hr_employee delete</field>
            <field name="group_id" ref="dms_employee_group_delete" />
            <field name="perm_unlink">1</field>
        </record>
        
        <record id="hr.menu_hr_employee" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('hr.group_hr_manager'))]"/>
        </record>
    </data>


    <data>
        <record id="dms_menu.group_sys_admin" model="res.groups">
            <field name="implied_ids" eval="[
                (4,ref('dms_employee_group_read')),
                (4,ref('dms_employee_group_update')),
                (4,ref('dms_employee_group_delete'))]" />
        </record>
        
    </data>
</odoo>
