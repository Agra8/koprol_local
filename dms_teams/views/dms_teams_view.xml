<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="dms_teams_tree_view" model="ir.ui.view">
            <field name="name">dms.teams.tree.view</field>
            <field name="model">dms.teams.master</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Request Form">
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="dms_teams_form_view" model="ir.ui.view">
            <field name="name">dms.teams.form.view</field>
            <field name="model">dms.teams.master</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master Teams Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>        
                            </group>
                            <group>
                                <field name="company_id" required="1"/>
                            </group>
                        </group>
                        <field name="teams_line_ids">
                            <tree string="Anggota" editable="bottom">
                                <field name="employee_id"/>
                                <field name="job_id" readonly="1"/>
                            </tree>
                        </field>
                        <notebook>
                            <page string="Audit Trail" >
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view -->
        <record id="dms_teams_search_view" model="ir.ui.view">
            <field name="name">dms.teams.search.view</field>
            <field name="model">dms.teams.master</field>
            <field name="arch" type="xml">
                <search string="Master Teams Search">
                    <field name="name"/>
                    <field name="company_id" string="Company"/>
                </search>
            </field>
        </record>

        <!-- Action window -->
        <record id="dms_teams_action" model="ir.actions.server">
            <field name="name">Master Teams</field>
            <field name="model_id" ref="model_dms_teams_master"/>
            <field name="state">code</field>
            <field name="code">
                action=env['dms.teams.master'].dms_teams_view()
            </field>
        </record>

        <menuitem id="dms_teams_menu" name="Master Teams" parent="dms_menu.dms_configuration_sub_menu" action="dms_teams_action" sequence="100"/>

    </data>
</odoo>