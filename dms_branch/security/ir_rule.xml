<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
            
        <record id="res_branch_rules" model="ir.rule">
            <field name="name">res.branch branch rule</field>
            <field name="model_id" ref="model_res_branch"/>
            <field name="domain_force">['|',('id','in',[b.id for b in user.area_id.branch_ids]),('create_uid','=',user.id)]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_read" eval="False"/>
        </record>

        
    <record id="res_branch_multi_rule" model="ir.rule">
        <field name="name">Branch multi company rule</field>
        <field name="model_id" ref="model_res_branch"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
        
 	</data>

 </odoo>