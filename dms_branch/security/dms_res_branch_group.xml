<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- DMS Res Branch Group Read -->

        <record id="dms_res_branch_group_read" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS Res Branch Read</field>
        </record>

        <record id="dms_res_branch_access_read" model="ir.model.access">
            <field name="model_id" ref="model_res_branch" />
            <field name="name">dms_res_branch read</field>
            <field name="group_id" ref="dms_res_branch_group_read" />
            <field name="perm_read">1</field>
        </record>

        <record id="dms_res_area_access_read" model="ir.model.access">
            <field name="model_id" ref="model_res_area" />
            <field name="name">dms_res_area read</field>
            <field name="group_id" ref="dms_res_branch_group_read" />
            <field name="perm_read">1</field>
        </record>


        <!-- DMS Res Branch Group Update -->

        <record id="dms_res_branch_group_update" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS Res Branch Update</field>
            <field name="implied_ids" eval="[(4, ref('dms_res_branch_group_read'))]" />
        </record>

        <record id="dms_res_branch_access_update" model="ir.model.access">
            <field name="model_id" ref="model_res_branch" />
            <field name="name">dms_res_branch update</field>
            <field name="group_id" ref="dms_res_branch_group_update" />
            <field name="perm_create">1</field>
            <field name="perm_write">1</field>
        </record>

        <record id="dms_res_area_access_update" model="ir.model.access">
            <field name="model_id" ref="model_res_area" />
            <field name="name">dms_res_area update</field>
            <field name="group_id" ref="dms_res_branch_group_update" />
            <field name="perm_create">1</field>
            <field name="perm_write">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <!-- DMS Res Branch Group Delete -->

        <record id="dms_res_branch_group_delete" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS Res Branch Delete</field>
            <field name="implied_ids" eval="[(4, ref('dms_res_branch_group_read'))]" />
        </record>

        <record id="dms_res_branch_access_delete" model="ir.model.access">
            <field name="model_id" ref="model_res_branch" />
            <field name="name">dms_res_branch delete</field>
            <field name="group_id" ref="dms_res_branch_group_delete" />
            <field name="perm_unlink">1</field>
        </record>

        <record id="dms_res_area_access_delete" model="ir.model.access">
            <field name="model_id" ref="model_res_area" />
            <field name="name">dms_res_area delete</field>
            <field name="group_id" ref="dms_res_branch_group_delete" />
            <field name="perm_unlink">1</field>
        </record>

    </data>
    <data>
        <record id="dms_menu.group_sys_admin" model="res.groups">
            <field name="implied_ids" eval="[
                (4,ref('dms_res_branch_group_read')),
                (4,ref('dms_res_branch_group_update')),
                (4,ref('dms_res_branch_group_delete')),
                ]" />
        </record>
    
    </data>
</odoo>
