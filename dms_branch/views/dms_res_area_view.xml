<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view -->
        <record id="dms_res_area_view_form_branch_inherit" model="ir.ui.view">
            <field name="name">res.area.form.branch.inherit</field>
            <field name="model">res.area</field>
            <field name="inherit_id" ref="dms_area.dms_res_area_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Dealer">
                        <field name="branch_ids" options="{'no_create': True,'no_open': True}" nolabel="1" colspan="4">
                            <tree string="Dealer" editable="bottom" edit="0">
                                <field name="name"/>
                                <field name="code"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>