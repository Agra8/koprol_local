<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="dms_res_branch_view_tree" model="ir.ui.view">
            <field name="name">res.branch.tree</field>
            <field name="model">res.branch</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Res Branch">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="dms_res_branch_view_form" model="ir.ui.view">
            <field name="name">res.branch.form</field>
            <field name="model">res.branch</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Res Branch">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="dms_menu.group_sys_admin_button" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
							<group>
								<field name="create_date" invisible="1"/>
								<field name="code" attrs="{'readonly': [('create_date','!=',False)]}"/>
								<field name="parent_id"/>
								<field name="name" required="1"/>
								<field name="area_id"  options="{'no_open':True,'no_create':True}"/>
							</group>
							<group>
                                <field name="company_id" groups="base.group_multi_company"/>
		                        <field name="is_md"/>
                                <field name="kacab_id"/>
                                <field name="kawil_id"/>
                                <field name="owner_id"/>
							</group>
						</group>
                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1" />
                                        <field name="create_date" readonly="1" />
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1" />
                                        <field name="write_date" readonly="1" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="dms_res_branch_view_search" model="ir.ui.view">
            <field name="name">res.branch.search</field>
            <field name="model">res.branch</field>
            <field name="arch" type="xml">
                <search string="Res Branch">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Code" name="filter_by_kode_dealer" domain="[('code','=','')]" />
                    <field name="name" select="True"/>
                    <field name="code" select="True"/>
                    <field name="area_id" select="True"/>
                    <field name="parent_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Area" domain="[]" name="group_by_area_id" context="{'group_by':'area_id'}"/>
                        <filter string="Branch induk" domain="[]" name="group_by_parent_id" context="{'group_by':'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="dms_res_branch_view_kanban" model="ir.ui.view" >
            <field name="name">res.branch.kanban</field>
            <field name="model">res.branch</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="code" />
                    <field name="area_id" />
                    <field name="parent_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
     
        <!-- action window -->
        <record id="dms_res_branch_action" model="ir.actions.act_window">
            <field name="name">Res Branch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.branch</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Res Branch
                </p><p>
                Click the Create button to add a new Res Branch
                </p>
            </field>
        </record>

        <menuitem id="dms_res_branch_menu" name="Branch" parent="dms_menu.dms_branch_master_menuitem" action="dms_res_branch_action" sequence="0" groups="dms_branch.dms_res_branch_group_read"/>
    </data>
</odoo>