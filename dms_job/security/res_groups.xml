<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- DMS HR Job Group Read -->

        <record id="dms_hr_job_group_read" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS HR Job Read</field>
        </record>

        <record id="dms_hr_job_access_read" model="ir.model.access">
            <field name="model_id" ref="model_hr_job" />
            <field name="name">dms_hr_job read</field>
            <field name="group_id" ref="dms_hr_job_group_read" />
            <field name="perm_read">1</field>
        </record>

        <!-- DMS HR Job Group Update -->

        <record id="dms_hr_job_group_update" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS HR Job Update</field>
            <field name="implied_ids" eval="[(4, ref('dms_hr_job_group_read'))]" />
        </record>

        <record id="dms_hr_job_access_update" model="ir.model.access">
            <field name="model_id" ref="model_hr_job" />
            <field name="name">dms_hr_job update</field>
            <field name="group_id" ref="dms_hr_job_group_update" />
            <field name="perm_create">1</field>
            <field name="perm_write">1</field>
        </record>

        <!-- DMS HR Job Group Delete -->

        <record id="dms_hr_job_group_delete" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS HR Job Delete</field>
            <field name="implied_ids" eval="[(4, ref('dms_hr_job_group_read'))]" />
        </record>

        <record id="dms_hr_job_access_delete" model="ir.model.access">
            <field name="model_id" ref="model_hr_job" />
            <field name="name">dms_hr_job delete</field>
            <field name="group_id" ref="dms_hr_job_group_delete" />
            <field name="perm_unlink">1</field>
        </record>

        <!-- DMS HR Job Mapping Group Read -->

        <record id="dms_hr_job_mapping_group_read" model="res.groups">
            <field name="category_id" ref="dms_menu.dms_role" />
            <field name="name">DMS HR Job Mapping Read</field>
        </record>

        <record id="dms_hr_job_mapping_access_read" model="ir.model.access">
            <field name="model_id" ref="model_hr_job" />
            <field name="name">dms_hr_job_mapping read</field>
            <field name="group_id" ref="dms_hr_job_mapping_group_read" />
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
        </record>
        
    </data>

    <data>
        <record id="dms_menu.group_sys_admin" model="res.groups">
            <field name="implied_ids" eval="[
                (4,ref('dms_hr_job_group_read')),
                (4,ref('dms_hr_job_group_update')),
                (4,ref('dms_hr_job_group_delete')),
                ]" />
        </record>

    </data>
</odoo>