<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="dms_approval_view_tree" model="ir.ui.view">
            <field name="name">dms.approval.tree</field>
            <field name="model">dms.approval</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Master Approval Matrix">
                    <field name="company_id"/>
                    <field name="form_id"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="dms_approval_view_form" model="ir.ui.view">
            <field name="name">dms.approval.form</field>
            <field name="model">dms.approval</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master Apprroval Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="company_id" required="1"/>
                            </group>
                            <group>
                                <field name="form_id" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approval Lines">
                                <field name="line_ids" nolabel="1" widget="one2many_list">
                                    <tree string="Approval Lines" editable="bottom">
                                        <field name="code_approval"/>
                                        <field name="group_id"/>
                                    </tree>
                              </field>
                            </page>
                            <page string="Audit Trail" >
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view -->
        <record id="dms_approval_search" model="ir.ui.view">
            <field name="name">dms.approval.search</field>
            <field name="model">dms.approval</field>
            <field name="arch" type="xml">
                <search string="Master Approval Form">
                    <field name="company_id"/>
                    <field name="form_id" string="Form"/>
                </search>
            </field>
        </record>

        <!-- Action window -->
        <record id="dms_approval_action" model="ir.actions.act_window">
            <field name="name">Master Approval Matrix</field>
            <field name="res_model">dms.approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Approval Matrix
                </p><p>
                Click the Create button to add a new Approval Matrix
                </p>
            </field>
        </record>


        <menuitem id="dms_approval_menu" name="Master Approval Matrix" parent="dms_menu.dms_configuration_sub_menu" action="dms_approval_action" sequence="100"/>
        
    </data>
</odoo>