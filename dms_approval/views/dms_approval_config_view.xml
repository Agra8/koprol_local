<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="dms_approval_config_view_tree" model="ir.ui.view">
            <field name="name">dms.approval.config.tree</field>
            <field name="model">dms.approval.config</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Request Form">
                    <field name="name"/>
                    <field name="form_id"/>
                    <field name="type_id"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="dms_approval_config_view_form" model="ir.ui.view">
            <field name="name">dms.approval.config.form</field>
            <field name="model">dms.approval.config</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master Apprroval Config Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="type_id" required="1"/>        
                            </group>
                            <group>
                                <field name="form_id" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Audit Trail" >
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view -->
        <record id="dms_approval_config_search" model="ir.ui.view">
            <field name="name">dms.approval.config.search</field>
            <field name="model">dms.approval.config</field>
            <field name="arch" type="xml">
                <search string="Master Approval Config Form">
                    <field name="name"/>
                    <field name="form_id" string="Form"/>
                    <field name="type_id" string="Type"/>
                </search>
            </field>
        </record>

        <!-- Action window -->
        <record id="dms_approval_config_action" model="ir.actions.server">
            <field name="name">DMS Approval Config</field>
            <field name="model_id" ref="dms_approval.model_dms_approval_config"/>
            <field name="state">code</field>
            <field name="code">
                action=env['dms.approval.config'].dms_approval_config_view()
            </field>
        </record>


        <menuitem id="dms_approval_config_menu" name="Master Approval Config" parent="dms_menu.dms_configuration_sub_menu" action="dms_approval_config_action" sequence="100"/>
        
        <!-- Master Approval Type -->
         <!-- Tree view -->
         <record id="dms_approval_type_view_tree" model="ir.ui.view">
            <field name="name">dms.approval.type.tree</field>
            <field name="model">dms.approval.type</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Approval Type Form" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="dms_approval_type_view_form" model="ir.ui.view">
            <field name="name">dms.approval.type.form</field>
            <field name="model">dms.approval.type</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master Apprroval type Form">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <notebook>
                            <page string="Audit Trail" >
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view -->
        <record id="dms_approval_type_search" model="ir.ui.view">
            <field name="name">dms.approval.type.search</field>
            <field name="model">dms.approval.type</field>
            <field name="arch" type="xml">
                <search string="Master Approval type Form">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Action window -->
        <record id="dms_approval_type_action" model="ir.actions.act_window">
            <field name="name">Master Approval type</field>
            <field name="res_model">dms.approval.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Approval Type
                </p><p>
                Click the Create button to add a new Approval Type
                </p>
            </field>
        </record>
        
        <menuitem id="dms_approval_type_menu" name="Master Approval type" parent="dms_menu.dms_configuration_sub_menu" action="dms_approval_type_action" sequence="100"/>

    </data>
</odoo>